{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*", "electron/*"],
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/node_modules"],
    "types": ["svelte", "@sapper"],

    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["ESNext", "DOM"]
  }
}