{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ES2019", "WebWorker"],
    
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "maxNodeModuleJsDepth": 1
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*", "src/node_modules/**/*.js"]
}
