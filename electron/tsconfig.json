{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["../node_modules/*"]
    },
    "strictNullChecks": true,
    "target": "ES2019",
  },
  "include": [
    "src/**/*"
  ]
}
