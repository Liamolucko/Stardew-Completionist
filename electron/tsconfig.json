{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "paths": {
      "*": ["../node_modules/*"]
    },
    "strictNullChecks": true,
    "target": "ES2019",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["../node_modules/*"]
}
